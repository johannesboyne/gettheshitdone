    .big
      color: #fff
      display: block
      float: left
      background: #333
      width: kachelnD*0.5
      height: kachelnD*0.5
    .smalls
      display: block
      float: left
      width: (kachelnD*0.5)
      .small
        color: #66D9EF
        display: block
        width: (kachelnD*0.5)
